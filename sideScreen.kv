<SideScreen>
    name: 'SideScreen'
    test_button3: test_button3
    fly2: fly2
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'do not press'
        size: 60, 60
        x: root.width * 0.1
        y: root.height * 0.75
        color: 1, 0, 0, 1
        on_press: root.transition_back()

    DPEAButton:
        id: test_button2
        text: 'go back'
        size: 100, 60
        x: root.width * 0.5
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.exit_program()

    DPEAButton:
        id: test_button3
        text: 'o-\<'
        size: 100, 60
        x: root.width * 0.5
        y: root.height * 0.05
        color: 0, 1, 0, 1
        on_press: root.random()

    ImageButton:
        id: fly2
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.2
        y: root.height * 0.2
        on_press: root.transition_back()