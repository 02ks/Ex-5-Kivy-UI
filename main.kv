<MainScreen>:
    name: 'main'
    btn1: btn1
    btn2: btn2
    btn3: btn3
    lb1: lb1
    slr: slr
    lb2: lb2
    btn4: btn4
    fly: fly
    FloatLayout:
        size_hint: None, None


    DPEAButton:
        id: test_button
        text: 'The Only 1'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()

    DPEAButton:
        id: btn1
        text: "On"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.2
        color: 1, 0, 0, 1
        on_press: root.switch_text()

    DPEAButton:
        id: btn2
        size: 100, 100
        x: root.width * 0.05
        y:root.height * 0.2
        color: 1, 0, 0, 1
        on_press: root.counter()

    DPEAButton:
        id: btn3
        text: "Click to change"
        size: 70, 70
        x: root.width * 0.2
        y:root.height * 0.75
        color: 1, 1, 0, 1
        on_press: root.affect()

    DPEAButton:
        id: btn4
        text: "Next Page"
        size: 70, 70
        x: root.width * 0.1
        y:root.height * 0.75
        color: 1, 1, 0, 1
        on_press: root.next()

    DPEAButton:
        id: btn5
        text: "To Defcon"
        size: 70, 70
        x: root.width * 0.9
        y:root.height * 0
        color: 1, 0, 0.7, 1
        on_press: root.next2()

    Label:
        id: lb1
        text: "Motor On"
        size: 100, 100
        font_size: 60
        x: root.width * 0.35
        y: root.height * 0.25
        color: 0, 1, 1, 1

    Slider:
        id: slr
        min: 0
        max: 100
        step: 1
        x: root.width * 0.35
        y: root.height * 0.25
        orientation: 'vertical'

    Label:
        id: lb2
        text: str(slr.value)
        size: 100, 100
        font_size: 60
        x: root.width * 0.4
        y: root.height * 0.3
        color: 0, slr.value * 3 / 300, slr.value + 60 / 100, 1


    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()

    ImageButton:
        id: fly
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.next()

